<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="lakion_sylius_cms.page.admin.route.index.class">%sylius.behat.page.admin.crud.index.class%</parameter>
        <parameter key="lakion_sylius_cms.page.admin.route.create.class">Sylius\Behat\Page\Admin\Route\CreatePage</parameter>
        <parameter key="lakion_sylius_cms.page.admin.route.update.class">Sylius\Behat\Page\Admin\Route\UpdatePage</parameter>
    </parameters>

    <services>
        <service id="lakion_sylius_cms.context.setup.route" class="Sylius\Behat\Context\Setup\RouteContext">
            <argument type="service" id="sylius.behat.shared_storage" />
            <argument type="service" id="__symfony__.sylius.fixture.example_factory.route" />
            <argument type="service" id="__symfony__.sylius.manager.route" />
            <argument type="service" id="__symfony__.sylius.repository.static_content" />
            <tag name="fob.context_service" />
        </service>

        <service id="lakion_sylius_cms.context.ui.admin.managing_routes" class="Sylius\Behat\Context\Ui\Admin\ManagingRoutesContext">
            <argument type="service" id="lakion_sylius_cms.page.admin.route.index" />
            <argument type="service" id="lakion_sylius_cms.page.admin.route.create" />
            <argument type="service" id="lakion_sylius_cms.page.admin.route.update" />
            <tag name="fob.context_service" />
        </service>

        <service id="lakion_sylius_cms.page.admin.route.index" class="%lakion_sylius_cms.page.admin.route.index.class%"
                 parent="sylius.behat.page.admin.crud.index" public="false">
            <argument type="string">lakion_sylius_cms_admin_route_index</argument>
        </service>
        <service id="lakion_sylius_cms.page.admin.route.create" class="%lakion_sylius_cms.page.admin.route.create.class%"
                 parent="sylius.behat.page.admin.crud.create" public="false">
            <argument type="string">lakion_sylius_cms_admin_route_create</argument>
        </service>
        <service id="lakion_sylius_cms.behat.page.admin.route.update" class="%lakion_sylius_cms.page.admin.route.update.class%"
                 parent="sylius.behat.page.admin.crud.update" public="false">
            <argument type="string">lakion_sylius_cms_admin_route_create</argument>
        </service>
    </services>
</container>
