    <imports>
        <import resource="services/route.xml" />
        <import resource="services/static_content.xml" />
        <import resource="services/string_block.xml" />
    </imports>

    <services>
        <service id="lakion_sylius_cms.admin.content_menu_builder" class="Lakion\SyliusCmsBundle\Menu\ContentMenuBuilder">
            <tag name="kernel.event_listener" event="sylius.menu.admin.main" method="configureMenu" />
        </service>
    </services>
</container>
