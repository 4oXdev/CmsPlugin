<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sylius.factory.static_content" class="Lakion\SyliusCmsBundle\Factory\StaticContentFactory">
            <argument type="service">
                <service class="Sylius\Component\Resource\Factory\Factory">
                    <argument>%sylius.model.static_content.class%</argument>
                </service>
            </argument>
            <argument type="service" id="doctrine_phpcr.odm.document_manager" />
            <argument>%cmf_content.persistence.phpcr.content_basepath%</argument>
        </service>

        <service id="sylius.factory.route" class="Lakion\SyliusCmsBundle\Factory\RouteFactory">
            <argument type="service">
                <service class="Sylius\Component\Resource\Factory\Factory">
                    <argument>%sylius.model.route.class%</argument>
                </service>
            </argument>
            <argument type="service" id="doctrine_phpcr.odm.document_manager" />
            <argument>%cmf_routing.dynamic.persistence.phpcr.route_basepaths%</argument>
        </service>

        <service id="sylius.admin.content_menu_builder" class="Lakion\SyliusCmsBundle\Menu\ContentMenuBuilder">
            <tag name="kernel.event_listener" event="sylius.menu.admin.main" method="configureMenu" />
        </service>
    </services>
</container>
